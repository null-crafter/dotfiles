set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1

# invert colors
set recolor_darkcolor #BDE090
set recolor_lightcolor #000000
map ' ' zoom out
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print
